          <stringProp name="script">import org.apache.kafka.clients.producer.KafkaProducer
import org.apache.kafka.clients.producer.ProducerRecord
import java.util.Properties
import java.util.UUID
import java.time.OffsetDateTime
import java.time.format.DateTimeFormatter
import groovy.json.JsonOutput

// 1. Инициализация Producer (Singleton)
if (props.get(&quot;kafkaProducer&quot;) == null) {
    synchronized(props) {
        if (props.get(&quot;kafkaProducer&quot;) == null) {
            def p = new Properties()
            p.put(&quot;bootstrap.servers&quot;, &quot;localhost:9094&quot;)
            p.put(&quot;key.serializer&quot;, &quot;org.apache.kafka.common.serialization.StringSerializer&quot;)
            p.put(&quot;value.serializer&quot;, &quot;org.apache.kafka.common.serialization.StringSerializer&quot;)
            p.put(&quot;acks&quot;, &quot;all&quot;)
            p.put(&quot;retries&quot;, 3)
            props.put(&quot;kafkaProducer&quot;, new KafkaProducer&lt;String, String&gt;(p))
            log.info(&quot;--- Kafka Producer Initialized ---&quot;)
        }
    }
}

def producer = (KafkaProducer) props.get(&quot;kafkaProducer&quot;)

// 2. Получение данных
def clientId = vars.get(&quot;CLIENT_ID&quot;)?.trim()
def category = vars.get(&quot;CATEGORY&quot;)?.trim()

// --- ЗАЩИТА ОТ ЗАГОЛОВКА CSV ---
if (clientId == &quot;CLIENT_ID&quot; || clientId == null || category == &quot;CATEGORY&quot;) {
    // Если это заголовок, помечаем результат как &quot;пропущенный&quot; (неудача)
    SampleResult.setSuccessful(false)
    SampleResult.setResponseCode(&quot;400&quot;)
    SampleResult.setResponseMessage(&quot;Skipped Header or Null data&quot;)
    return 
}

// Дополнительная проверка на формат UUID
try {
    UUID.fromString(clientId)
} catch (Exception e) {
    log.warn(&quot;SKIPPING: Invalid UUID format: &quot; + clientId)
    SampleResult.setSuccessful(false)
    SampleResult.setResponseMessage(&quot;Invalid UUID format: &quot; + clientId)
    return
}

def eventId = vars.get(&quot;FIXED_EVENT_ID&quot;) ?: UUID.randomUUID().toString()
def timestamp = OffsetDateTime.now().format(DateTimeFormatter.ISO_OFFSET_DATE_TIME)

// 3. Формируем JSON
def payloadMap = [
    &quot;eventId&quot;  : eventId,
    &quot;clientId&quot; : clientId,
    &quot;category&quot; : category,
    &quot;text&quot;     : &quot;Test message for &quot; + category,
    &quot;timestamp&quot;: timestamp
]
def jsonPayload = JsonOutput.toJson(payloadMap)

// 4. Отправка
try {
    def record = new ProducerRecord&lt;String, String&gt;(&quot;topic-1&quot;, clientId, jsonPayload)
    producer.send(record).get()
    
    SampleResult.setResponseData(jsonPayload, &quot;UTF-8&quot;)
    SampleResult.setSuccessful(true)
    SampleResult.setResponseCode(&quot;200&quot;)
} catch (Exception e) {
    log.error(&quot;KAFKA SEND FAILURE: &quot;, e)
    SampleResult.setSuccessful(false)
    SampleResult.setResponseMessage(&quot;Kafka error: &quot; + e.toString())
}</stringProp>
